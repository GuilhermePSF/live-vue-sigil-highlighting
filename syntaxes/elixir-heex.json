{
  "injectionSelector": "L:source.elixir -comment -text -string",
  "name": "elixir-vue-heex",
  "patterns": [
    {
      "comment": "VUE HEEx sigil with heredoc (triple double quotes)",
      "name": "text.html.heex",
      "begin": "\\s*(~VUE\"\"\")",
      "beginCaptures": {
        "1": {
          "name": "string.quoted.double.heredoc.elixir"
        }
      },
      "end": "^\\s*(\"\"\"[a-z]*)",
      "endCaptures": {
        "1": {
          "name": "string.quoted.double.heredoc.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.heex"
        }
      ]
    },
    {
      "comment": "VUE HEEx sigil with double quotes",
      "name": "text.html.heex",
      "begin": "~VUE\\\"",
      "beginCaptures": {
        "0": {
          "name": "string.quoted.double.elixir"
        }
      },
      "end": "\\\"[a-z]*",
      "endCaptures": {
        "0": {
          "name": "string.quoted.double.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.heex"
        }
      ]
    },
    {
      "comment": "VUE HEEx sigil with square brackets",
      "name": "text.html.heex",
      "begin": "~VUE\\[",
      "beginCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "end": "\\][a-z]*",
      "endCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.heex"
        }
      ]
    },
    {
      "comment": "VUE HEEx sigil with parentheses",
      "name": "text.html.heex",
      "begin": "~VUE\\(",
      "beginCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "end": "\\)[a-z]*",
      "endCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.heex"
        }
      ]
    },
    {
      "comment": "VUE HEEx sigil with curly brackets",
      "name": "text.html.heex",
      "begin": "~VUE\\{",
      "beginCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "end": "\\}[a-z]*",
      "endCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.heex"
        }
      ]
    }
  ],
  "scopeName": "source.elixir.vue_heex"
}
