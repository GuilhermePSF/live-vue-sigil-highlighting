{
  "injectionSelector": "L:source.elixir -comment -text -string",
  "name": "elixir-vue",
  "patterns": [
    {
      "comment": "VUE sigil with heredoc (triple double quotes)",
      "name": "text.html.vue",
      "begin": "\\s*(~VUE\"\"\")",
      "beginCaptures": {
        "1": {
          "name": "string.quoted.double.heredoc.elixir"
        }
      },
      "end": "^\\s*(\"\"\"[a-z]*)",
      "endCaptures": {
        "1": {
          "name": "string.quoted.double.heredoc.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.vue"
        }
      ]
    },
    {
      "comment": "VUE sigil with double quotes",
      "name": "text.html.vue",
      "begin": "~VUE\\\"",
      "beginCaptures": {
        "0": {
          "name": "string.quoted.double.elixir"
        }
      },
      "end": "\\\"[a-z]*",
      "endCaptures": {
        "0": {
          "name": "string.quoted.double.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.vue"
        }
      ]
    },
    {
      "comment": "VUE sigil with square brackets",
      "name": "text.html.vue",
      "begin": "~VUE\\[",
      "beginCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "end": "\\][a-z]*",
      "endCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.vue"
        }
      ]
    },
    {
      "comment": "VUE sigil with parentheses",
      "name": "text.html.vue",
      "begin": "~VUE\\(",
      "beginCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "end": "\\)[a-z]*",
      "endCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.vue"
        }
      ]
    },
    {
      "comment": "VUE sigil with curly brackets",
      "name": "text.html.vue",
      "begin": "~VUE\\{",
      "beginCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "end": "\\}[a-z]*",
      "endCaptures": {
        "0": {
          "name": "string.quoted.other.elixir"
        }
      },
      "patterns": [
        {
          "include": "source.vue"
        }
      ]
    }
  ],
  "scopeName": "source.elixir.vue"
}
